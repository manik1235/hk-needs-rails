<h1>V1 Needs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Item</th>
      <th>Budgeted</th>
      <th>Allocated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @v1_needs.each do |v1_need| %>
      <tr>
        <td><%= v1_need.user %></td>
        <td><%= v1_need.item %></td>
        <td><%= v1_need.budgeted %></td>
        <td><%= v1_need.allocated %></td>
        <td><%= link_to 'Show', v1_need %></td>
        <td><%= link_to 'Edit', edit_v1_need_path(v1_need) %></td>
        <td><%= link_to 'Destroy', v1_need, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

